// CodeDog Thread Library

requirements = [
    [require, threads_implementation]
]

interface={
    provides=[Threads]
    libFiles=[]
    headers=[] //threads
}

LibDescription  ={
    useStatus   = dynamic
    description ='Library for Webmulti-thread programming'
    features    =[Threads]
    platforms   =[Linux, OS-X_Devices, Windows]
}

struct Threads{
    me bool: notDone <- true
    void: run()
    me uint: ID()
    bool: isActive()
    void: start()
    void: waitForExit()
    void: requestClose() <- {notDone <- false}

}

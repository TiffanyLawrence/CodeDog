        vertex[1].y = 500;
        vertex[1].Red = 0x0000;
        vertex[1].Green = 0xd000;
        vertex[1].Blue = 0xd000;
        vertex[1].Alpha = 0x0000;

        gRect.UpperLeft = 0;
        gRect.LowerRight = 1;

        GradientFill(%0, vertex, 2, &gRect, 1, GRADIENT_FILL_RECT_V);
    %>
}
